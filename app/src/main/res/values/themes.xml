<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodCouriers" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="fontFamily">@font/poppins_family</item>
    </style>

    <style name="Theme.FoodCouriers" parent="Base.Theme.FoodCouriers" />

    <style name="button_gradient_style"  parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_gradient</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="TabItemTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontWeight">700</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    
    <style name="AccountTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="GoogleLoginButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:drawableLeft">@drawable/ic_google</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="paddingStart">35dp</item>
        <item name="android:background">@drawable/google_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#66F6F6F6</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintEnabled">false</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    
    <style name="TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">#3B3B3B</item>
        <item name="android:textColorHint">#3B3B3B</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>

